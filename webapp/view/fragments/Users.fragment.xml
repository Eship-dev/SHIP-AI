<core:FragmentDefinition	xmlns="sap.m"    xmlns:ui="sap.ui.table"  	xmlns:l="sap.ui.layout"	xmlns:f="sap.ui.layout.form"	xmlns:core="sap.ui.core">

	<Toolbar width="auto" height="4rem" class="toolbarbottomborder fixedLayout ordersDarkThemeToolbar">
		<Text text="Users" class="toolBarHeader sapUiTinyMarginBegin whiteColor" ></Text>
			<ToolbarSpacer />
			<HBox>
				<Button  text="Add Users"  press="onAddLocationPress" class="Master-toolbar__button" width="8rem" ></Button>
				<!-- <Button type="Success" press="onADDLocImpPress" icon="sap-icon://navigation-down-arrow" class="Master-toolbar__button sapUiTinyMarginEnd" ></Button> -->
			</HBox>
	</Toolbar>

        <Toolbar height="25%" class="sapUiTinyMarginBottom whiteBackground" >
			<HBox width="100%" >
				<VBox class="sapUiTinyMargin" width="33%">
					<Text text="1" class="NumberSizeTitle1"></Text>
					<Text text="Total Users" class="NumberSizeTitle2"></Text>
					<Button class="totalProgress-request-button request-button" press="handleManifestFilterBtnPress" icon="false" width="100%"  ></Button>
				</VBox>
				<VBox class="sapUiTinyMargin" width="33%">
					<Text text="2" class="NumberSizeTitle1"></Text>
					<Text text="Active" class="NumberSizeTitle2"></Text>
					<Button type="Critical" class="inTransit-request-button request-button" press="handleManifestFilterBtnPress" icon="false" width="100%" ></Button>
				</VBox>
				<VBox class="sapUiTinyMargin" width="33%">
					<Text text="3" class="NumberSizeTitle1"></Text>
					<Text text="Inactive" class="NumberSizeTitle2"></Text>
					<Button class="InWhite-request-button request-button" type="Success" press="handleManifestFilterBtnPress" icon="false" width="100%" ></Button>
				</VBox>
			</HBox>
		</Toolbar>

	<VBox class="whiteBackground sapUiTinyMarginTop" >
		<Toolbar class="sapUiTinyMarginTop sapUiSmallMarginBegin sapUiSmallMarginEnd" >
			<Button icon="sap-icon://filter" press="onUsersFilterPopoverPress" type="Transparent" class="ordersIcons" ></Button>
			<ToolbarSpacer ></ToolbarSpacer>
				<SearchField width="10rem" class="sapUiSmallMarginBottom forsearchhigh" liveChange="onSearchUsers" ></SearchField>
				<Button icon="sap-icon://action" press="onUsersExportToExcel" type="Transparent" class="ordersIcons" ></Button>
			<Button icon="sap-icon://action-settings" press="openUsersColNamesPopover" type="Transparent" class="ordersIcons" ></Button>
			<customData>
				<core:CustomData key="remember" value="true" />
				<core:CustomData key="showClearButton" value="true" />
				<core:CustomData key="confirmButtonText" value="Ok" />
			</customData>
		</Toolbar>
		<ui:Table
				id="_IDUsersTable"
				rows="{eshipjetModel>/UsersTableRows}"
				visibleRowCount="10"
				selectionMode="None"
				class="rowRightLine ordersTableRightBorder">

				<ui:Column visible="{= ${eshipjetModel>/UsersTableColumns/0/visible} }">
					<Label text="Location Name" />
					<ui:template>
						<Text text="{eshipjetModel>locationName}" />
					</ui:template>
				</ui:Column>

				<ui:Column visible="{= ${eshipjetModel>/UsersTableColumns/1/visible} }">
					<Label text="User ID" />
					<ui:template>
						<Text text="{eshipjetModel>userId}" />
					</ui:template>
				</ui:Column>

				<ui:Column visible="{= ${eshipjetModel>/UsersTableColumns/2/visible} }">
					<Label text="First Name" />
					<ui:template>
						<Text text="{eshipjetModel>firstName}" />
					</ui:template>
				</ui:Column>

				<ui:Column visible="{= ${eshipjetModel>/UsersTableColumns/3/visible} }">
					<Label text="Last Name" />
					<ui:template>
						<Text text="{eshipjetModel>lastName}" />
					</ui:template>
				</ui:Column>

				<ui:Column visible="{= ${eshipjetModel>/UsersTableColumns/4/visible} }">
					<Label text="Phone No" />
					<ui:template>
						<Text text="{eshipjetModel>phonenum}" />
					</ui:template>
				</ui:Column>

				<ui:Column visible="{= ${eshipjetModel>/UsersTableColumns/5/visible} }">
					<Label text="Email" />
					<ui:template>
						<Text text="{eshipjetModel>userEmail}" />
					</ui:template>
				</ui:Column>

				<ui:Column visible="{= ${eshipjetModel>/UsersTableColumns/6/visible} }">
					<Label text="Address Line 1" />
					<ui:template>
						<Text text="{eshipjetModel>addressLine1}" />
					</ui:template>
				</ui:Column>

				<ui:Column visible="{= ${eshipjetModel>/UsersTableColumns/7/visible} }">
					<Label text="Address Line 2" />
					<ui:template>
						<Text text="{eshipjetModel>addressLine2}" />
					</ui:template>
				</ui:Column>

				<ui:Column visible="{= ${eshipjetModel>/UsersTableColumns/8/visible} }">
					<Label text="City" />
					<ui:template>
						<Text text="{eshipjetModel>addressCity}" />
					</ui:template>
				</ui:Column>

				<ui:Column visible="{= ${eshipjetModel>/UsersTableColumns/9/visible} }">
					<Label text="Zip / Postal Code" />
					<ui:template>
						<Text text="{eshipjetModel>addressZip}" />
					</ui:template>
				</ui:Column>

				<ui:Column visible="{= ${eshipjetModel>/UsersTableColumns/10/visible} }">
					<Label text="Country" />
					<ui:template>
						<Text text="{eshipjetModel>addressCountry}" />
					</ui:template>
				</ui:Column>

				<ui:Column visible="{= ${eshipjetModel>/UsersTableColumns/11/visible} }">
					<Label text="Role" />
					<ui:template>
						<Text text="{eshipjetModel>userRole}" />
					</ui:template>
				</ui:Column>

				<ui:Column visible="{= ${eshipjetModel>/UsersTableColumns/12/visible} }">
					<Label text="Status" />
					<ui:template>
						<Switch state="{= ${eshipjetModel>status} === 'Active' }" type="AcceptReject" />
					</ui:template>
				</ui:Column>

				<ui:Column visible="{= ${eshipjetModel>/UsersTableColumns/13/visible} }">
					<Label text="Actions" />
					<ui:template>
						<HBox>
							<Button text="View Now" type="Transparent" />
							<Button icon="sap-icon://megamenu" type="Transparent" press=".handleDownArrowPress" />
						</HBox>
					</ui:template>
				</ui:Column>

			</ui:Table>

    </VBox>

	<Toolbar class="whiteBackground sapUiTinyMarginTop ordersTableFooter">
		<ToolbarSpacer/>
			<Button  text="First" type="Transparent"/>
			<Button  text="Previous" type="Transparent"/>
			<Text    text="1-0 of 0" />
			<Button  text="Next" type="Transparent"/>
			<Button  text="Last" type="Transparent"/>
	</Toolbar>

</core:FragmentDefinition>
