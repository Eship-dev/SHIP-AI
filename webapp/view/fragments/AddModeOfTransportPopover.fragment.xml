<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    height="100%"
>
    <Popover
        id="idAddModeOfTransportPopover"
        placement="Bottom"
        contentWidth="40%"
        contentHeight="69%"
        showHeader="true"
        class="sapUiResponsivePadding sapUiResponsivePadding ">
        <!-- Custom Header -->
        <customHeader>
            <Toolbar>
                <!-- Title -->
                <Title text="Add Mode Of Transport" />

                <!-- Spacer to push close button to the right -->
                <ToolbarSpacer />

                <!-- Close Button -->
                <Button
                    icon="sap-icon://decline"
                    class="Decline_Btn"
                    press="AddModeOfTransportClosePress" />
            </Toolbar>
        </customHeader>
        <footer>
            <OverflowToolbar>
                <Button
                    text="Cancel"
                    press="AddModeOfTransportCancelPopover"
                />
                <ToolbarSpacer />
                <Button
                    type="Emphasized"
                    text="Save"
                    press="AddModeOfTransportSelectPopover"
                />
            </OverflowToolbar>
        </footer>
        <content>
           	<f:SimpleForm editable="true"
                            class="customSimpleFormShadow"
                            width="auto"
							  layout="ColumnLayout"
							  columnsM="2"
							  columnsL="2"
							  columnsXL="2">
					<f:content>
                        <Label  text="Location Name" />
                        <ComboBox class="sapUiSmallMarginBottom create-ship-req_input" placeholder="Select">
                        </ComboBox>
                        <Label text="Status" />
                        <Switch class="sapUiSmallMarginBottom create-ship-req_input" state="true" >
				            <layoutData>
					            <FlexItemData growFactor="1" />
				            </layoutData>
			            </Switch>
                        <Label text="Mode" />  
			            <Input class="sapUiSmallMarginBottom create-ship-req_input" ></Input>
					</f:content>
				</f:SimpleForm>
        </content>
    </Popover>
</core:FragmentDefinition>
