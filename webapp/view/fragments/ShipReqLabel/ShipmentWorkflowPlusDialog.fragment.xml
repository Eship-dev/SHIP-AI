<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:f="sap.f" xmlns:fb="sap.ui.comp.filterbar" xmlns:svm="sap.ui.comp.smartvariants" xmlns:ui="sap.ui.table" xmlns:u="sap.ui.unified" xmlns:c="sap.ui.core">
  <Dialog id="idShipmentWorkflowDialog" showHeader="false" contentWidth="70%" class="myCustomDialog sapUiResponsiveContentPadding" stretch="{device>/system/phone}" >
    <customHeader>
      <Toolbar>
        <Title text="Shipment Notes"></Title>
        <ToolbarSpacer></ToolbarSpacer>
        <Button icon="sap-icon://decline" press="ShipmentWorkflowCancelDialog" class="Decline_Btn"></Button>
      </Toolbar>
    </customHeader>
       <VBox>
        <!-- Notes Section -->
        <Label text="Notes" />
        <TextArea width="100%" rows="4" />

        <ToolbarSeparator/>

        <!-- History Notes Section -->
        <Label text="History Notes" design="Bold" />

        <Table width="100%" items="{eshipjetModel>/historyNotes}">
            <columns>
                <Column>
                    <Text text="Date" />
                </Column>
                <Column>
                    <Text text="Name" />
                </Column>
                <Column>
                    <Text text="Notes" />
                </Column>
            </columns>
            <items>
                <ColumnListItem>
                    <cells>
                        <Text text="{eshipjetModel>date}" />
                        <Text text="{eshipjetModel>name}" />
                        <Text text="{eshipjetModel>notes}" />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </VBox>
      
        <endButton>
            <Button text="Close" press=".onCloseDialog" />
        </endButton>
    



   
  </Dialog>
</core:FragmentDefinition>





