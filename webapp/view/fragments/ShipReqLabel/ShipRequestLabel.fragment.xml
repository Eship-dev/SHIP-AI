	<Table id="idShipReqsTable"
		inset="false"
		sticky="ColumnHeaders,HeaderToolbar"
		growing="true"
		ariaLabelledBy="title" fixedLayout="Strict"
		autoPopinMode="false" popinLayout="GridSmall"
		growingThreshold="20"
		items="{ path: 'eshipjetModel>/ShipReqTableData/ShipReqRows' }" >
		<headerToolbar>
                <OverflowToolbar >
                    <Button icon="sap-icon://filter" press="onShipReqFilterPopoverPress"></Button>
						<ToolbarSpacer ></ToolbarSpacer>
							<Button icon="sap-icon://action" press="onShipReqExportToExcel"></Button>
                            <Button icon="sap-icon://action-settings" press="openShipReqColNamesPopover" >
                                <customData>
                                    <core:CustomData key="remember" value="true" />
                                    <core:CustomData key="showClearButton" value="true" />
                                    <core:CustomData key="confirmButtonText" value="Ok" />
                                </customData>
							</Button>
                </OverflowToolbar>
            </headerToolbar>
            <dependents>
                <plugins:ColumnResizer columnResize="onColumnResize"/>
                <columnmenu:Menu id="menu" beforeOpen="beforeOpenColumnMenu">
                    <columnmenu:QuickSort change="onSort">
                        <columnmenu:items>
                            <columnmenu:QuickSortItem></columnmenu:QuickSortItem>
                        </columnmenu:items>
                    </columnmenu:QuickSort>
                    <columnmenu:QuickGroup change="onGroup">
                        <columnmenu:items>
                            <columnmenu:QuickGroupItem></columnmenu:QuickGroupItem>
                        </columnmenu:items>
                    </columnmenu:QuickGroup>
                    <columnmenu:items>
                        <columnmenu:ActionItem icon="sap-icon://sort" label="Sort" press="onColumnHeaderItemPress"/>
                    </columnmenu:items>
                </columnmenu:Menu>
            </dependents>

            <!-- <dragDropConfig>
                <dnd:DragDropInfo sourceAggregation="columns" targetAggregation="columns" dropPosition="Between" drop="onColumnMove"/>
            </dragDropConfig> -->

		<columns>

			<Column app:p13nKey="locationName" headerMenu="menu" visible="{eshipjetModel>/ShipReqColumns/0/visible}">
                    <header>
                        <Text text="Location Name"/>
                    </header>
            </Column>
			<Column app:p13nKey="Consolidation ID" headerMenu="menu" visible="{eshipjetModel>/ShipReqColumns/1/visible}">
                    <header>
                        <Text text="Consolidation ID"/>
                    </header>
            </Column>
			<Column app:p13nKey="requestIdLabelId" headerMenu="menu" visible="{eshipjetModel>/ShipReqColumns/2/visible}">
				<header>
                    <Text text="Request ID/Label ID"/>
                </header>
			</Column>
                <Column app:p13nKey="CreatedDate" hAlign="Left" visible="{eshipjetModel>/ShipReqColumns/3/visible}" headerMenu="menu">
					<header>
						<Text text="Created Date"/>
					</header>
				</Column>
				<Column app:p13nKey="ShipDate" hAlign="Left" visible="{eshipjetModel>/ShipReqColumns/4/visible}" headerMenu="menu">
                    <Text text="Ship Date"/>
                </Column>
				<Column app:p13nKey="ShipType" hAlign="Left" visible="{eshipjetModel>/ShipReqColumns/5/visible}" headerMenu="menu">
                    <Text text="Ship Type"/>
                </Column>
				<Column app:p13nKey="shipMethod" hAlign="Left" visible="{eshipjetModel>/ShipReqColumns/6/visible}" headerMenu="menu">
                    <Text text="Ship Method"/>
                </Column>
				<Column app:p13nKey="ServiceName" hAlign="Left" visible="{eshipjetModel>/ShipReqColumns/7/visible}" headerMenu="menu">
                    <Text text="Service Name"/>
                </Column>
				<Column app:p13nKey="TrackingNumber" hAlign="Left" visible="{eshipjetModel>/ShipReqColumns/8/visible}" headerMenu="menu">
                    <Text text="Tracking Number"/>
                </Column>
				<Column app:p13nKey="status" hAlign="Left" visible="{eshipjetModel>/ShipReqColumns/9/visible}" headerMenu="menu">
                    <Text text="Status"/>
                </Column>
				<Column app:p13nKey="ShipToContact" hAlign="Left" visible="{eshipjetModel>/ShipReqColumns/10/visible}" headerMenu="menu">
                    <Text text="Ship To Contact"/>
                </Column>
				<Column app:p13nKey="ShipToCompany" hAlign="Left" visible="{eshipjetModel>/ShipReqColumns/11/visible}" headerMenu="menu">
                    <Text text="Ship To Company"/>
                </Column>
				<Column app:p13nKey="ShipToAddressLine1" hAlign="Left" visible="{eshipjetModel>/ShipReqColumns/12/visible}" headerMenu="menu">
                    <Text text="Ship To Address Line 1"/>
                </Column>
				<Column app:p13nKey="shipToStateProvince" hAlign="Left" visible="{eshipjetModel>/ShipReqColumns/13/visible}" headerMenu="menu">
                    <Text text="Ship To State/Province"/>
                </Column>
				<Column app:p13nKey="shipToCity" hAlign="Left" visible="{eshipjetModel>/ShipReqColumns/14/visible}" headerMenu="menu">
                    <Text text="Ship To City"/>
                </Column>
				<Column app:p13nKey="shipToZipPostalCode" hAlign="Left" visible="{eshipjetModel>/ShipReqColumns/15/visible}" headerMenu="menu">
                    <Text text="Ship To Zip/Postal Code"/>
                </Column>
				<Column app:p13nKey="shipToCountry" hAlign="Left" visible="{eshipjetModel>/ShipReqColumns/16/visible}" headerMenu="menu">
                    <Text text="Ship To Country"/>
                </Column>
				<Column app:p13nKey="shipToPhone" hAlign="Left" visible="{eshipjetModel>/ShipReqColumns/17/visible}" headerMenu="menu">
                    <Text text="Ship To Phone No"/>
                </Column>
				<Column app:p13nKey="shipToEmail" hAlign="Left" visible="{eshipjetModel>/ShipReqColumns/18/visible}" headerMenu="menu">
                    <Text text="Ship To Email"/>
                </Column>
				<Column app:p13nKey="RequesterName" hAlign="Left" visible="{eshipjetModel>/ShipReqColumns/19/visible}" headerMenu="menu">
                    <Text text="Requester Name"/>
                </Column>
				<Column app:p13nKey="ConnectedTo" hAlign="Left" visible="{eshipjetModel>/ShipReqColumns/20/visible}" headerMenu="menu">
                    <Text text="Connected To"/>
                </Column>
				<Column app:p13nKey="OrderType" hAlign="Left" visible="{eshipjetModel>/ShipReqColumns/21/visible}" headerMenu="menu">
                    <Text text="Order Type"/>
                </Column>
				<Column app:p13nKey="RFID" hAlign="Left" visible="{eshipjetModel>/ShipReqColumns/22/visible}" headerMenu="menu">
                    <Text text="RFID"/>
                </Column>
				<Column app:p13nKey="Actions" hAlign="Right" width="auto" visible="true" headerMenu="menu" >
                    <Text text="Actions"/>
                </Column>
		</columns>
		<items>
			<ColumnListItem vAlign="Middle">
				<cells>
					<ObjectIdentifier
						text="{eshipjetModel>locationName}"/>
					<Text text="{}" />
					<Text text="{eshipjetModel>requestIdLabelId}" />
					<Text text="{eshipjetModel>CreatedDate}" />
					<Text text="{eshipjetModel>ShipDate}" />
					<Text text="{}" />
					<Text text="{eshipjetModel>shipMethod}" />
					<Text text="{eshipjetModel>ServiceName}" />
					<Text text="{eshipjetModel>TrackingNumber}" />
					<!-- <Text text="{eshipjetModel>status}" class="{path: 'eshipjetModel>status', formatter: '.formatStatusClass'}" /> -->

					<ObjectNumber number="{eshipjetModel>status}"
							state= "{= ${eshipjetModel>status} === 'Open' ? 'Error' : 'Success' }" />

					<!-- <ObjectNumber
						number="{eshipjetModel>status}"
						state="{
							path: 'eshipjetModel>status',
							formatter: '.formatter.weightState'
						}" /> -->

					<!-- <ObjectIdentifier
						text="{eshipjetModel>status}" /> -->

					<Text text="{eshipjetModel>ShipToContact}" />
					<Text text="{eshipjetModel>ShipToCompany}" />
					<Text text="{eshipjetModel>shipToCity}" />
					<Text text="{eshipjetModel>shipToStateProvince}" />
					<Text text="{eshipjetModel>shipToZipPostalCode}" />
					<Text text="{eshipjetModel>shipToCountry}" />
					<Text text="{eshipjetModel>shipToPhone}" />
					<Text text="{eshipjetModel>shipToEmail}" />
					<Text text="{}" />
					<Text text="{}" />
					<Text text="{}" />
					<Text text="{}" />
					<Text text="{}" />
					<HBox alignContent="End" >
						<Button text="View Now" type="Transparent" ></Button>
						<Button icon="sap-icon://megamenu" type="Transparent" ></Button>
					</HBox>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
		<Toolbar class="sapUiLargeMarginBottom" >
			<ToolbarSpacer/>
				<Button  text="First" enabled="false" />
				<Button  text="Previous" enabled="false"/>
				<Text    text="1-50 of 74"/>
				<Button  text="Next" />
				<Button  text="Last" />
		</Toolbar>


</core:FragmentDefinition>
