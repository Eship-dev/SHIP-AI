  <VBox class="customVBox">
  <!-- First Row: Ship Method -->
  <HBox class="customRow" width="100%" >
    <Label text="Ship Method:" class="customLabel" width="15rem" />
    <Text text="{eshipjetModel>/TrackingNumberTableRows/0/ERPCarrierID}" class="customTextField centerText" width="15rem" />
  </HBox>
  
  <!-- Second Row: Service Name -->
  <HBox class="customRow" width="100%">
    <Label text="Service Name:" class="customLabel" width="15rem" />
    <Text text="{eshipjetModel>/TrackingNumberTableRows/0/Carrier}" class="customTextField centerText" width="15rem" />
  </HBox>
  
  <!-- Third Row: Delivered To -->
  <HBox class="customRow" width="100%" >
    <Label text="Delivered To:" class="customLabel" width="15rem" />
    <Text text="{eshipjetModel>/TrackingNumberTableRows/0/COMPANY}" class="customTextField centerText" width="15rem" />
  </HBox>
  
  <!-- Fourth Row: Ship Date -->
  <HBox class="customRow" width="100%" >
    <Label text="Ship Date:" class="customLabel" width="15rem" />
    <Text text="{path: 'eshipjetModel>/TrackingNumberTableRows/0/ShipDate', formatter: '.formatter.formatDate'}" class="customTextField centerText" width="15rem" />
  </HBox>
  
  <!-- Fifth Row: Standard Transit -->
  <HBox class="customRow" width="100%" >
    <Label text="Standard Transit:" class="customLabel" width="15rem" />
    <Text text="{eshipjetModel>/TrackingNumberTableRows/0/StandardTransit}" class="customTextField centerText" width="15rem" />
  </HBox>
  
  <!-- Sixth Row: Delivered -->
  <HBox class="customRow" width="100%" >
    <Label text="Delivered:" class="customLabel" width="15rem" />
    <Text text="{eshipjetModel>/TrackingNumberTableRows/0/Delivered}" class="customTextField centerText" width="15rem" />
  </HBox>
  
  <!-- Seventh Row: Signed By -->
  <HBox class="customRow" width="100%" >
    <Label text="Signed By:" class="customLabel" width="15rem" />
    <Text text="{eshipjetModel>/TrackingNumberTableRows/0/SignedBy}" class="customTextField centerText" width="15rem" />
  </HBox>

  <HBox class="customRow sapUiTinyMarginTop" width="100%" >
    <core:Icon src="sap-icon://download" class="obtainProofOfDelivery" ></core:Icon>
    <Text text="Obtain proof of delivery" class="obtainProofOfDelivery sapUiTinyMarginBegin" width="15rem" />
  </HBox>
