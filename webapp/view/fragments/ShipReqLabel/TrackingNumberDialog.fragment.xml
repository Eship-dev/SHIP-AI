<core:FragmentDefinition xmlns="sap.m" 
  xmlns:l="sap.ui.layout" 
  xmlns:f="sap.ui.layout.form" 
  xmlns:core="sap.ui.core" 
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:fb="sap.ui.comp.filterbar" 
  xmlns:svm="sap.ui.comp.smartvariants" 
  xmlns:ui="sap.ui.table" 
  xmlns:u="sap.ui.unified" 
  xmlns:c="sap.ui.core">
  <Dialog id="idTrackingNumberDialog" showHeader="false" class="rightSideDialog" contentWidth="45%" >
    <customHeader>
      <Toolbar>
        <Title text="ShipperCopilot Tracking ID - 794817852547"></Title>
        <ToolbarSpacer></ToolbarSpacer>
        <Button icon="sap-icon://decline" press="TrackingNumberCancelDialog" class="Decline_Btn"></Button>
      </Toolbar>
    </customHeader>
    <content>
      <mvc:View controllerName="sap.m.sample.TableAlternateRowColors.Table" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m">
        <!-- Existing Delivery Table -->
    
    <VBox class="customSimpleFormShadow" >
        <VBox justifyContent="Center" alignItems="Center" class="sapUiTinyMarginTop" >
          <Image src="https://dev.eshipjet.site/assets/images/statusProgress.png" width="100%" height="100%" ></Image>
          <Text text="Delivered" class="GreenandCenter sapUiTinyMarginTop"/>
        </VBox>

    <VBox justifyContent="Center" > 
      <f:SimpleForm id="SimpleFormDisplay354"
        editable="false"
        layout="ResponsiveGridLayout"
        labelSpanXL="3"
        labelSpanL="3"
        labelSpanM="6"
        labelSpanS="6"
        adjustLabelSpan="false"
        emptySpanXL="4"
        emptySpanL="4"
        emptySpanM="0"
        emptySpanS="0"
        columnsXL="1"
        columnsL="1"
        columnsM="1"
        singleContainerFullSize="false" >
        <f:content>
          <Label text="Ship Method" />
          <Text text="{eshipjetModel>/TrackingNumberTableRows/0/ERPCarrierID}" />
          <Label text="Service Name" />
          <Text text="{eshipjetModel>/TrackingNumberTableRows/0/Carrier}" />
          <Label text="Delivered To" />
          <Text text="{eshipjetModel>/TrackingNumberTableRows/0/COMPANY}" />
          <Label text="Ship Date" />
          <Text text="{path: 'eshipjetModel>/TrackingNumberTableRows/0/ShipDate', formatter: '.formatter.formatDate'}" />
          <Label text="Standard Transit" />
          <Text text="{eshipjetModel>/TrackingNumberTableRows/0/StandardTransit}" />
          <Label text="Delivered" />
          <Text text="{eshipjetModel>/TrackingNumberTableRows/0/Delivered}" />
          <Label text="Signed By" />
          <Text text="{eshipjetModel>/TrackingNumberTableRows/0/SignedBy}" />
        </f:content>
      </f:SimpleForm>
    </VBox>
    </VBox>
        <!-- New Shipment Travel History Table -->
        <!-- <Toolbar class="customSimpleFormShadow" height="40%" > -->
  <ScrollContainer
    class="customSimpleFormShadow"
		height="400px"
		width="auto"
		vertical="true"
		focusable="true">
        <Table id="idShipmentHistoryTable" 
          inset="false"
          sticky="ColumnHeaders,HeaderToolbar"
          alternateRowColors="true" 
          items="{/ShipmentTravelHistoryRows}" >
          <headerToolbar>
            <OverflowToolbar>
              <Text text="Shipment Travel History" class="ShipmentTravelHistory"/>
            </OverflowToolbar>
          </headerToolbar>
          <columns >
            <Column>
              <Text text="Date"  />
            </Column>
            <Column>
              <Text text="Time" />
            </Column>
            <Column>
              <Text text="Status" />
            </Column>
            <Column>
              <Text text="Location" />
            </Column>
          </columns>
          <items>
            <ColumnListItem vAlign="Middle">
              <cells>
                <Text text="{Date}" />
                <Text text="{Time}" />
                <Text text="{Status}" />
                <Text text="{Location}" />
              </cells>
            </ColumnListItem>
          </items>
        </Table>
        </ScrollContainer>
        <!-- </Toolbar> -->
        
      </mvc:View>
    </content>
  </Dialog>
</core:FragmentDefinition>
