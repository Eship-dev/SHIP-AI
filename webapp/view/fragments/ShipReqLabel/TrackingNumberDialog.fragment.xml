</VBox>

<!-- Scrollable Table -->
<ScrollContainer
  class="customSimpleFormShadow"
  height="300px"
  width="auto"
  vertical="true">
  <Table id="idShipmentHistoryTable" 
    class="backgroundForTrackTableColumns"
    inset="false"
    sticky="ColumnHeaders,HeaderToolbar"
    alternateRowColors="true" 
    items="{/ShipmentTravelHistoryRows}" >
    <headerToolbar>
      <OverflowToolbar>
        <Text text="Shipment Travel History" class="ShipmentTravelHistory"/>
      </OverflowToolbar>
    </headerToolbar>
    <columns>
      <Column width="10rem" >
        <Text text="Date" />
      </Column>
      <Column width="6rem" >
        <Text text="Time" />
      </Column>
      <Column width="10px" hAlign="Center" >
        <Text />
      </Column>
      <Column width="2rem" hAlign="Center" >
        <Text />
      </Column>
      <Column>
        <Text text="Status" />
      </Column>
      <Column>
        <Text text="Location" />
      </Column>
    </columns>
    <items>
      <ColumnListItem vAlign="Middle">
        <cells>
          <Text text="{Date}" />
          <Text text="{Time}" />
          <Text class="timeline-line" visible="{= ${Status} === 'DELIVERED' ? false : true }" />
          <HBox class="timeline-container" alignItems="Center" >
              <!-- <Text class="timeline-line" visible="{= ${Status} === 'DELIVERED' ? false : true }" /> -->
              <Text class="timeline-icon" visible="{= ${Status} === 'DELIVERED' ? false : true }" />
              <Text text="{= ${Status} === 'DELIVERED' ? 'âœ”' : '' }" visible="{= ${Status} === 'DELIVERED' ? true : false }" />
          </HBox>
          <Text text="{Status}" />
          <Text text="{Location}" />
        </cells>
      </ColumnListItem>
    </items>
  </Table>
</ScrollContainer>
        
    </content>
  </Dialog>
