<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns:f="sap.f" xmlns:fb="sap.ui.comp.filterbar" xmlns:svm="sap.ui.comp.smartvariants" xmlns:ui="sap.ui.table" xmlns:u="sap.ui.unified" xmlns:c="sap.ui.core">
  <Dialog id="idTrackingNumberDialog" showHeader="false" class="myCustomDialog">
    <customHeader>
      <Toolbar>
        <Title text="ShipperCopilot Tracking ID - 794817852547"></Title>
        <ToolbarSpacer></ToolbarSpacer>
        <Button icon="sap-icon://decline" press="TrackingNumberCancelDialog" class="Decline_Btn"></Button>
      </Toolbar>
    </customHeader>
    <content>
      <mvc:View controllerName="sap.m.sample.TableAlternateRowColors.Table" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m">
        <!-- Existing Delivery Table -->
        <Toolbar class="customSimpleFormShadow" height="24%" >
        
        <Table id="idDeliveryTable" inset="false" alternateRowColors="true" items="{eshipjetModel>/TrackingNumberTableRows}">
          <headerToolbar>
            <OverflowToolbar>
              <Text text="Delivery Details" class="GreenandCenter"/>
            </OverflowToolbar>
          </headerToolbar>
          <columns>
            <Column>
              <Text text="Ship Method" />
            </Column>
            <Column>
              <Text text="Service Name" />
            </Column>
            <Column>
              <Text text="Delivered To" />
            </Column>
            <Column>
              <Text text="Ship Date" />
            </Column>
            <Column>
              <Text text="Standard Transit" />
            </Column>
            <Column>
              <Text text="Delivered" />
            </Column>
            <Column>
              <Text text="Signed By" />
            </Column>
          </columns>
          <items>
            <ColumnListItem vAlign="Middle">
              <cells>
                <Text text="{eshipjetModel>ERPCarrierID}" />
                <Text text="{eshipjetModel>Carrier}" />
                <Text text="{eshipjetModel>COMPANY}" />
                <Text text="{path: 'eshipjetModel>ShipDate', formatter: '.formatter.formatDate'}" />
                <Text text="{eshipjetModel>StandardTransit}" />
                <Text text="{eshipjetModel>Delivered}" />
                <Text text="{eshipjetModel>SignedBy}" />
              </cells>
            </ColumnListItem>
          </items>
        </Table>
        <!-- <Toolbar >
    <HBox>
          <Link text="Obtain proof of delivery" href="{ProofOfDeliveryLink}" target="_blank" wrapping="true" />
    </HBox>
</Toolbar> -->
    </Toolbar>
        <!-- New Shipment Travel History Table -->
        <Toolbar class="customSimpleFormShadow" height="40%" >
        <Table id="idShipmentHistoryTable" inset="false" alternateRowColors="true" items="{/ShipmentTravelHistoryRows}" >
          <headerToolbar>
            <OverflowToolbar>
              <Text text="Shipment Travel History" class="ShipmentTravelHistory"/>
            </OverflowToolbar>
          </headerToolbar>
          <columns >
            <Column>
              <Text text="Date"  />
            </Column>
            <Column>
              <Text text="Time" />
            </Column>
            <Column>
              <Text text="Status" />
            </Column>
            <Column>
              <Text text="Location" />
            </Column>
          </columns>
          <items>
            <ColumnListItem vAlign="Middle">
              <cells>
                <Text text="{Date}" />
                <Text text="{Time}" />
                <Text text="{Status}" />
                <Text text="{Location}" />
              </cells>
            </ColumnListItem>
          </items>
        </Table>
        </Toolbar>
        
      </mvc:View>
    </content>
  </Dialog>
</core:FragmentDefinition>
