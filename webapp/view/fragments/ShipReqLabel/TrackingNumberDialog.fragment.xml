<core:FragmentDefinition xmlns="sap.m" 
  xmlns:l="sap.ui.layout" 
  xmlns:f="sap.ui.layout.form" 
  xmlns:core="sap.ui.core" 
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:fb="sap.ui.comp.filterbar" 
  xmlns:svm="sap.ui.comp.smartvariants" 
  xmlns:ui="sap.ui.table" 
  xmlns:u="sap.ui.unified" 
  xmlns:c="sap.ui.core">
  <Dialog id="idTrackingNumberDialog" showHeader="false" class="rightSideDialogForTracking" contentHeight="100vh" >

    <customHeader>
            <Toolbar height="3.5rem" >
                <Title text="ShipperCopilot Tracking ID - 794817852547" />
                <ToolbarSpacer />
                <Button icon="sap-icon://decline" class="Decline_Btn" press="TrackingNumberCancelDialog" />
            </Toolbar>
      </customHeader>

    <content>
        <!-- Existing Delivery Table -->
    
    <VBox class="customSimpleFormShadow">
  <!-- Delivery Image & Info -->
  <VBox justifyContent="Center" alignItems="Center" class="sapUiTinyMarginTop">
    <Image src="https://dev.eshipjet.site/assets/images/statusProgress.png" width="100%" height="100%"></Image>
    <Text text="Delivered" class="GreenandCenter sapUiTinyMarginTop"/>
  </VBox>

  <!-- SimpleForm for Delivery Details -->
  <VBox> 
    <f:SimpleForm id="SimpleFormDisplay354"
      editable="true"
      layout="ResponsiveGridLayout"
      columnsM="2"
      columnsL="3"
      columnsXL="4">
      <f:content>
        <Label text="Ship Method" />
        <Text text="{eshipjetModel>/TrackingNumberTableRows/0/ERPCarrierID}" class="TrackingSpaceField" />
        <Label text="Service Name" />
        <Text text="{eshipjetModel>/TrackingNumberTableRows/0/Carrier}" class="TrackingSpaceField"/>
        <Label text="Delivered To" />
        <Text text="{eshipjetModel>/TrackingNumberTableRows/0/COMPANY}" class="TrackingSpaceField"/>
        <Label text="Ship Date" />
        <Text text="{path: 'eshipjetModel>/TrackingNumberTableRows/0/ShipDate', formatter: '.formatter.formatDate'}" class="TrackingSpaceField" />
        <Label text="Standard Transit" />
        <Text text="{eshipjetModel>/TrackingNumberTableRows/0/StandardTransit}" class="TrackingSpaceField"/>
        <Label text="Delivered" />
        <Text text="{eshipjetModel>/TrackingNumberTableRows/0/Delivered}" class="TrackingSpaceField" />
        <Label text="Signed By" />
        <Text text="{eshipjetModel>/TrackingNumberTableRows/0/SignedBy}" class="TrackingSpaceField"/>
      </f:content>
    </f:SimpleForm>
  </VBox>
</VBox>

<!-- Scrollable Table -->
<ScrollContainer
  class="customSimpleFormShadow"
  height="400px"
  width="auto"
  vertical="true">
  <Table id="idShipmentHistoryTable" 
    inset="false"
    sticky="ColumnHeaders,HeaderToolbar"
    alternateRowColors="true" 
    items="{/ShipmentTravelHistoryRows}">
    <headerToolbar>
      <OverflowToolbar>
        <Text text="Shipment Travel History" class="ShipmentTravelHistory"/>
      </OverflowToolbar>
    </headerToolbar>
    <columns>
      <Column>
        <Text text="Date" />
      </Column>
      <Column>
        <Text text="Time" />
      </Column>
      <Column width="">
        <Text />
      </Column>
      <Column>
        <Text text="Status" />
      </Column>
      <Column>
        <Text text="Location" />
      </Column>
    </columns>
    <items>
      <ColumnListItem vAlign="Middle">
        <cells>
          <Text text="{Date}" />
          <Text text="{Time}" />
          <Text text="" class="timeline-line" />
          <Text text="{Status}" />
          <Text text="{Location}" />
        </cells>
      </ColumnListItem>
    </items>
  </Table>
</ScrollContainer>
        
    </content>
  </Dialog>
</core:FragmentDefinition>
