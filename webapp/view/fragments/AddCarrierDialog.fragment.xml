<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.f"
	xmlns:fb="sap.ui.comp.filterbar"
	xmlns:svm="sap.ui.comp.smartvariants"
    xmlns:ui="sap.ui.table"
	xmlns:u="sap.ui.unified"
	xmlns:c="sap.ui.core" >
    <Dialog
        id="idAddCarrierDialog"
        showHeader="false"
        contentWidth="70%"
        contentHeight="50%" >
        <Toolbar >
            <Title text="Add Carrier"></Title>
            <ToolbarSpacer ></ToolbarSpacer>
                <Button icon="sap-icon://decline" press="AddCarrierCancelDialog"></Button>
        </Toolbar>
       

        <content>
            <form:SimpleForm
               	editable="true"
			layout="ColumnLayout"
			columnsM="2"
			columnsL="3"
			columnsXL="5">
                <form:content>
                    <Label text="Ship Method ID" />
                    <Select id="locationName1" />
                    <Label text="Ship Method" />
                    <Select id="shipFromC1ountry" />
                    <Label text="Ship Method Type" />
                    <Select id="shipToCo1untry" />
                    <Label text="Ship Method Coverage" />
                    <Select id="ShipMethodCoverage" />
                    
                </form:content>
            </form:SimpleForm>
        </content>

                    
        <footer >
                    <Toolbar >
                        <Button  text="Cancel" press="AddCarrierCancelDialog" />
                        <ToolbarSpacer/>
                        <Button  text="Save" type="Success" press="AddCarrierUpdateDialog" />
                    </Toolbar>
            </footer>
    </Dialog>
</core:FragmentDefinition>