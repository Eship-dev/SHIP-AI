<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.f"
	xmlns:fb="sap.ui.comp.filterbar"
	xmlns:svm="sap.ui.comp.smartvariants"
    xmlns:ui="sap.ui.table"
	xmlns:u="sap.ui.unified"
	xmlns:c="sap.ui.core" >
    <Dialog
        id="idAddCarrierDialog"
        showHeader="false"
        contentWidth="80%"
        contentHeight="70%" >
        <Toolbar >
            <Title text="Add Carrier"></Title>
            <ToolbarSpacer ></ToolbarSpacer>
                <Button icon="sap-icon://decline" press="onConsolidationClosePress"></Button>
        </Toolbar>
       

        <ui:Table id="idAddCarrierTable"
                class="sapUiTinyMarginTop customSimpleFormShadow"
				selectionMode="None"
				visibleRowCount="7">
					<ui:extension>
						<OverflowToolbar>
							<Button icon="sap-icon://filter" press="onConsolidationFilterPopoverPress"></Button>
							<ToolbarSpacer ></ToolbarSpacer>
							<Button icon="sap-icon://action" press="onConsolidationExportToExcel" ></Button>
                            <Button icon="sap-icon://action-settings" press="openAddCarrierColNamesPopover" >
                                <customData>
                                    <core:CustomData key="remember" value="true" />
                                    <core:CustomData key="showClearButton" value="true" />
                                    <core:CustomData key="confirmButtonText" value="Ok" />
                                </customData>
							</Button>										
						</OverflowToolbar>
					</ui:extension>
		</ui:Table>
        <footer >
                    <Toolbar >
                        <Button  text="Cancel" press="AddCarrierCancelDialog" />
                        <ToolbarSpacer/>
                        <Button  text="Save" type="Success" press="AddCarrierUpdateDialog" />
                    </Toolbar>
            </footer>
    </Dialog>
</core:FragmentDefinition>