<core:FragmentDefinition 
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    height="100%">

    <Popover id="idShipNowPlusIconPopover"  
            placement="Left" 
            contentWidth="50%"
            showHeader="true"
			class="sapUiResponsivePadding--header sapUiResponsivePadding--footer"
            >
			 <!-- Custom Header -->
    <customHeader>
        <Toolbar>
            <!-- Title -->
            <Title text="Add Location" />
            
            <!-- Spacer to push close button to the right -->
            <ToolbarSpacer />

            <!-- Close Button -->
            <Button 
                icon="sap-icon://decline" 
                press="onAddLocationClosePress" 
                type="Transparent" />
        </Toolbar>
    </customHeader>
		 <footer>
            <OverflowToolbar>
                <Button text="Cancel" press="AddLocCancelPopover" />
                <ToolbarSpacer/>
                <Button type="Emphasized" text="Save" press="AddLocSelectPopover" />
            </OverflowToolbar>
        </footer>

		
        <content>
            
           
       	<Toolbar height="100%">
           	<f:SimpleForm editable="true"
							  layout="ColumnLayout"
							  columnsM="2"
							  columnsL="2"
							  columnsXL="2">
					<f:content>
						<Toolbar ariaLabelledBy="idShipFrom">
                                <Button icon="sap-icon://customer-briefing" press="handleAddLocPress"/>
								<Title id="ShipNowPlusTitle" text="Name and Contact"/>
						</Toolbar>
						 <Label text="Location Code" />
                         <Input />
                         <Label text="Contact Name" />
                         <Input />
                        <Label text="Email" />
                        <Input />
                        <Label text="Location Name" />
                        <Input />
                        <Label text="Phone No" />
                        <Input />
					</f:content>
				</f:SimpleForm>
              	</Toolbar>

            <Toolbar height="100%">
           	<f:SimpleForm editable="true"
							  layout="ColumnLayout"
							  columnsM="2"
							  columnsL="2"
							  columnsXL="2">
					<f:content>
						<Toolbar ariaLabelledBy="idShipFrom">
                                <Button icon="sap-icon://customer-briefing" press="handleAddLocPress"/>
								<Title id="ShipNowPlusIconPopover2" text="Address Info"/>
						</Toolbar>
						 <Label text="Address Line 1" />
                         <Input />
                         <Label text="City" />
                         <Input />
                        <Label text="Zip / Postal Code" />
                        <Input />
                        <Label text="Ship From Tax" />
                        <Input />
                         <Label text="Address Line 2" />
                        <Input />
                        <Label text="State / Province" />
                        <Input />
                        <Label text="Country" />
                        <Input />
					</f:content>
				</f:SimpleForm>
              </Toolbar>


       
           	
               	

        

        </content>      

       
    </Popover>
</core:FragmentDefinition>
