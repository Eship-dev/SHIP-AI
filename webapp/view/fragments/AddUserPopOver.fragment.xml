<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    height="100%"
>
    <Popover
        id="idAddUserPopover"
        placement="Bottom"
        contentWidth="45%"
        contentHeight="75%"
        showHeader="true"
        class="sapUiResponsivePadding sapUiResponsivePadding "
    >
        <!-- Custom Header -->
        <customHeader>
            <Toolbar>
                <!-- Title -->
                <Title text="Add User" />

                <!-- Spacer to push close button to the right -->
                <ToolbarSpacer />

                <!-- Close Button -->
                <Button
                    icon="sap-icon://decline"
                    press="AddUserClosePress"
                    type="Transparent"
                />
            </Toolbar>
        </customHeader>
        <footer>
            <OverflowToolbar>
                <Button
                    text="Cancel"
                    press="AddUserCancelPopover"
                />
                <ToolbarSpacer />
                <Button
                    type="Emphasized"
                    text="Save"
                    press="AddUserSelectPopover"
                />
            </OverflowToolbar>
        </footer>
        <content>
            <f:SimpleForm
                editable="true"
                class="customSimpleFormShadow"
                width="auto"
                layout="ColumnLayout"
                columnsM="2"
                columnsL="2"
                columnsXL="2">
                <f:content> 
                    <Label text="User ID" />
                    <Input />
                    <Label text="First Name" />
                    <Input />
                    <Label text="Location Name" />
                    <Input />
                    <Label text="Address Line 1" />
                    <Input />
                    <Label text="City" />
                    <Input />
                    <Label text="Zip / Postal Code" />
                    <Input />
                    <Label text="Phone No" />
                    <Input />
                    <Label text="Password" />
                    <Input />
                    <Label text="Company Name" />
                    <Input />
                    <Label text="Last Name" />
                    <Input />
                    <Label text="State / Province" />
                    <Input />
                    <Label text="Address Line 2" />
                    <Input /> 
                    <Label text="Country" />
                    <Input />
                    <Label text="Email" />
                    <Input />
                    <Label text="Role Assignment" />
                    <Input />
                    <Label text="Status" />
                        <Switch state="true" >
				            <layoutData>
					            <FlexItemData growFactor="1" />
				            </layoutData>
			            </Switch>   
                </f:content>
            </f:SimpleForm>

            	<f:SimpleForm editable="true"
                            class="customSimpleFormShadow"
                            width="auto"
							  layout="ResponsiveGridLayout"
							  columnsM="2"
							  columnsL="2"
							  columnsXL="2">
					<f:content>
                    <Toolbar ariaLabelledBy="idShipFrom">
							<Title id="iduserFrom3" text="ERP"/>
					</Toolbar>
                          <Label text="Status" />
                        <CheckBox ></CheckBox>
                          <Label text="Status" />
                        <CheckBox ></CheckBox>
                         <Label text="Status" />
                        <CheckBox ></CheckBox>
                         <Label text="Status" />
                        <CheckBox ></CheckBox>
                          <Label text="Status" />
                        <CheckBox ></CheckBox>
                         <Label text="Status" />
                        <CheckBox ></CheckBox>
					</f:content>
				</f:SimpleForm>
        </content>
    </Popover>
</core:FragmentDefinition>
