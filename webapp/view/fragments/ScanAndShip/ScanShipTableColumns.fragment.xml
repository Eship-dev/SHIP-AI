<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Popover	id="myPopover"  contentWidth="20%"	 placement="Left" contentHeight="40%">
		<customHeader>
			<VBox id="_IDGenVBox">
				<Toolbar id="_IDGenHBox" class="toolbarbottomborder">
					<Title  class="sapUiTinyMarginBegin sapUiTinyMarginTop" id="_IDGenTitle" text="Columns"></Title>
					<ToolbarSpacer id="_IDGenToolbarSpacer1" ></ToolbarSpacer>					
					<Button id="_IDCloseIconPopover" icon="sap-icon://decline" press="onScanShipColSelectClosePress"></Button>
				</Toolbar>
				<SearchField id="_IDGenSearchField" placeholder="Search Columns"   liveChange="onScanShipColNameSearch"></SearchField>
			</VBox>
		</customHeader>
		<content>
        <Table	id="myScanColumnSelectId" mode="MultiSelect" items="{path : 'ScanShipTableDataModel>/columns'}" >
		<ColumnListItem id="_IDGenColumnListItem1" vAlign="Middle">
			<cells>				
				<Text id="_IDGenText" text="{ScanShipTableDataModel>label}" />				
			</cells>
		</ColumnListItem>
		<columns>
			<Column id="_IDGenColumn">
				<header>
					<Text id="_IDGenText1" text="Select All" />
				</header>
			</Column>			
		</columns>
        </Table>
        </content>
        <footer>
            <Toolbar id="_IDGenToolbar" >
                <ToolbarSpacer id="_IDGenToolbarSpacer"/>
                <Button id="_IDGenButton" text="Apply" press="onScanShipColSelectOkPress" type="Emphasized"></Button>               
            </Toolbar>
        </footer>      
	</Popover>   
</core:FragmentDefinition>