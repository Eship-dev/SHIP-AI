<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.f"
	xmlns:fb="sap.ui.comp.filterbar"
	xmlns:svm="sap.ui.comp.smartvariants"
    xmlns:ui="sap.ui.table"
	xmlns:u="sap.ui.unified"
	xmlns:c="sap.ui.core" 
    >
    <Dialog
        id="idAddCarrierConfigurationDialog"
        showHeader="false"
        contentWidth="80%"
        contentHeight="70%" >
        <Toolbar >
            <Title text="Add Carrier Configuration"></Title>
            <ToolbarSpacer ></ToolbarSpacer>
            <Button icon="sap-icon://decline" press="onAddCarrierConfigurationClosePress"></Button>
        </Toolbar>

        <!-- Add SimpleForm inside the dialog -->
        <content>
          	
											<f:SimpleForm id="AddivftionalInfo" editable="true" layout="ColumnLayout" columnsM="3" columnsL="4" columnsXL="4">
												<f:content>
													<Label text="PO No" />
													<Input value="{}"></Input>
													<Label text="Prefix" />
													<Input value="{}"></Input>
													<Label text="Refer" />
													<ComboBox items="{}">
														<core:Item key="{}" text="{}" />
													</ComboBox>
													<Label text="Description" />
													<Input value="{}" />

													<Label text="Invoice No" />
													<Input value="{}" />
													<Label text="Transportation Mode" />
													<ComboBox items="{}">
														<core:Item key="{}" text="{}" />
													</ComboBox>
													<Label text="Insurance Amount" />
													<Input value="{}" />
													<Label text="IncoTerm" />
													<ComboBox items="{}">
														<core:Item key="{}" text="{}" />
													</ComboBox>

													<Label text="SO No" />
													<Input value="{}" />
													<Label text="Move Code" />
													<ComboBox items="{}">
														<core:Item key="{}" text="{}" />
													</ComboBox>
													<Label text="Insurance Currency" />
													<Input value="{}" />
													<Label text="IncoTerm Location" />
													<Input value="{}" />

													<Label text="References" />
													<ComboBox items="{}">
														<core:Item key="{}" text="{}" />
													</ComboBox>
													<Label text="Shipment Method" />
													<ComboBox items="{}">
														<core:Item key="{}" text="{}" />
													</ComboBox>
													<Label text="Currency" />
													<Input value="{}" />
												</f:content>
											</f:SimpleForm>
                                        
        </content>

        <footer>
            <Toolbar >
                <Button text="Cancel" press="AddCarrierConfigurationCancelDialog" />
                <ToolbarSpacer />
                <Button text="Save" type="Success" press="AddCarrierConfigurationUpdateDialog" />
            </Toolbar>
        </footer>
    </Dialog>
</core:FragmentDefinition>
