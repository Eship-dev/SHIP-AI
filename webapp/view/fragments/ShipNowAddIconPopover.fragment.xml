<core:FragmentDefinition 
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    height="100%">

    <Popover id="idShipNowAddIconPopover"  
            placement="Right" 
             contentWidth="35%"
            contentHeight="50%"
            showHeader="true"
			class="sapUiResponsivePadding--header sapUiResponsivePadding--footer"
            >
			 <!-- Custom Header -->
    <customHeader>
        <Toolbar>
            <Title text="Create Address" />
            
            <!-- Spacer to push close button to the right -->
            <ToolbarSpacer />

            <!-- Close Button -->
            <Button 
                icon="sap-icon://decline" 
                press="ShipNowAddIconClosePress" 
                type="Transparent" />
        </Toolbar>
    </customHeader>
		 <footer>
            <OverflowToolbar>
                <Button text="Cancel" press="ShipNowAddIconCancelPopover" />
                <ToolbarSpacer/>
                <Button type="Emphasized" text="Save" press="ShipNowAddIconSelectPopover" />
            </OverflowToolbar>
        </footer>
        <content>
           	<f:SimpleForm editable="true"
							  layout="ColumnLayout"
							  columnsM="2"
							  columnsL="2"
							  columnsXL="2"
                               class="customSimpleFormShadow">
					<f:content>
						<Toolbar ariaLabelledBy="idShipFrom">
                                <Button icon="sap-icon://customer-briefing" press="handleAddLocPress"/>
								<Title id="ShipNowPlusTitle" text="ContactInfo"/>
						</Toolbar>
						 <Label text="Contact Name" />
                         <Input />
                         <Label text="Phone No" />
                         <Input />
                        <Label text="Company Name" />
                        <Input />
                        <Label text="Email" />
                        <Input />
					</f:content>
				</f:SimpleForm>
         
         <f:SimpleForm editable="true"
                        class="customSimpleFormShadow"
                        width="auto"
							  layout="ColumnLayout"
							  columnsM="2"
							  columnsL="2"
							  columnsXL="2">
					<f:content>
						<Toolbar ariaLabelledBy="idShipFrom">
                                <Button icon="sap-icon://customer-briefing" press="handleAddLocPress"/>
								<Title id="idAddLocaTionFrom" text="Name and Contact"/>
						</Toolbar>
						 <Label text="Location Code" />
                         <Input />
                         <Label text="Contact Name" />
                         <Input />
                        <Label text="Email" />
                        <Input />
                        <Label text="Location Name" />
                        <Input />
                        <Label text="Phone No" />
                        <Input />
					</f:content>
				</f:SimpleForm>

           
        </content>      

       
    </Popover>
</core:FragmentDefinition>
