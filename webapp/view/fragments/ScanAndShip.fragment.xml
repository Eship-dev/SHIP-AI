<core:FragmentDefinition	xmlns="sap.m"    xmlns:ui="sap.ui.table"    	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"	xmlns:core="sap.ui.core">
    <VBox>
	<Toolbar class="sapUiTinyMargin" height="5rem">
        <Title text="Scan and Ship"/>
        <Input  width="20rem" id="userscanShipInput" placeholder="Enter SAP DN, Handing Unit or ODO" ></Input>
        <!-- <TextArea width="20rem" rows="2" id="userInput" placeholder="Enter SAP DN, Handing Unit or ODO" ></TextArea> -->
        <Button text="Ship Now" type="Accept" press="onScanShipSearchPress"  ></Button>
        <ToolbarSpacer />
        <Button text="Void Now" type="Reject"></Button>
	</Toolbar>

        <ui:Table class="sapUiTinyMargin" 	rowActionCount="0"	id="idScanAndShipTable"
					selectionMode="None"	paste="onPaste"		ariaLabelledBy="title">
					<ui:extension>
							<OverflowToolbar>
							<Button icon="sap-icon://filter" press="scanAndShipFilterPopoverPress"></Button>
							<ToolbarSpacer ></ToolbarSpacer>
							<Button icon="sap-icon://action" press="handleSASTableExportToExcel"></Button>
                            <Button icon="sap-icon://action-settings" press="openPersoDialog" >
                                <customData>
                                    <core:CustomData key="remember" value="true" />
                                    <core:CustomData key="showClearButton" value="true" />
                                    <core:CustomData key="confirmButtonText" value="Ok" />
                                </customData>
							</Button>										
						</OverflowToolbar>
					</ui:extension>									
				<ui:footer>
                <Toolbar>
                    <Text text="Total Shipped by John Marsh: 1"></Text>
                    <ToolbarSpacer/>
                    <Button  text="First"     type="Emphasized"/>
                    <Button  text="Previous"  type="Emphasized"/>
                    <Text    text="1-0 of 0" />
                    <Button  text="Next"       type="Emphasized"/>
                    <Button  text="Last"       type="Emphasized"/>
				</Toolbar>
		    </ui:footer>
		</ui:Table>

    </VBox>




</core:FragmentDefinition>
