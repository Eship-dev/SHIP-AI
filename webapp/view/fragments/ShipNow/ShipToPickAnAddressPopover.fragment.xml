<core:FragmentDefinition 
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    height="100%">

    <Popover id="idShipToPickAnAddressPopover"  
            placement="HorizontalPreferredRight" 
            contentWidth="90%"
            contentHeight="50%"
            showHeader="true"
            class="sapUiResponsivePadding--header sapUiResponsivePadding--footer">
        
        <!-- Custom Header -->
        <customHeader>
            <Toolbar>
                <Title text="Pick An Address" />
                <ToolbarSpacer />
                <Button 
                    icon="sap-icon://decline" 
                    class="Decline_Btn"
                    press="onShipToPickAnAddressCancelPress" />
            </Toolbar>
        </customHeader>

        <content>
        <Toolbar height="100%">
            <Table 
                id="idShipToAddressTable"
                inset="false"
                mode="SingleSelectMaster"
                items="{
                    path: '/shipToAddresses'
                }">
                <columns>
                    <Column>
                        <Text text="Contact Name" />
                    </Column>
                    <Column>
                        <Text text="Company Name" />
                    </Column>
                    <Column>
                        <Text text="Address Line 1" />
                    </Column>
                    <Column>
                        <Text text="Address Line 2" />
                    </Column>
                    <Column>
                        <Text text="Address Line 3" />
                    </Column>
                    <Column>
                        <Text text="City" />
                    </Column>
                    <Column>
                        <Text text="State" />
                    </Column>
                    <Column>
                        <Text text="Zipcode" />
                    </Column>
                    <Column>
                        <Text text="Country" />
                    </Column>
                    <Column>
                        <Text text="Phone" />
                    </Column>
                    <Column>
                        <Text text="Email" />
                    </Column>
                    <Column>
                        <Text text="Address Type" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{FullName}" />
                            <Text text="{BusinessPartnerName1}" />
                            <Text text="{StreetName}" />
                            <Text text="{HouseNumber}" />
                            <Text text="{AddressLine3}" />
                            <Text text="{CityName}" />
                            <Text text="{Region}" />
                            <Text text="{PostalCode}" />
                            <Text text="{Country}" />
                            <Text text="{PhoneNumber}" />
                            <Text text="{EMAIL}" />
                            <Text text="{LocationType}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
            </Toolbar>
        </content>

        <!-- Footer with Actions -->
        <footer>
            <OverflowToolbar>
                <Button text="Cancel" press="onShipToPickAnAddressCancelPress" />
                <ToolbarSpacer />
                <Button type="Emphasized" text="Select" press="onShipToPickAnAddressSelectPress" />
            </OverflowToolbar>
        </footer>
    </Popover>
</core:FragmentDefinition>
