<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    height="100%"
    modal="false"
>
    <Popover
        id="addBrokerselectPopover123"
        placement="Bottom"
        contentHeight="100%"
        showHeader="false"
        class="rightSidePopoverGare"
    >
        <!-- Custom Header -->
        <customHeader>
            <Toolbar >
                <!-- Title -->
                <Title text="Broker Information" />

                <!-- Spacer to push close button to the right -->
                <ToolbarSpacer />

                <!-- Close Button -->
                <Button
                    icon="sap-icon://decline"
                    class="Decline_Btn ship-now-decline_btn"
                    press="onBrokerSelectEditDialogClosePress"
                />
            </Toolbar>
        </customHeader>
        
        <footer>
            <OverflowToolbar class="p-sidebar-header sapMPopoverFooter1">
                <Button
                    text="Cancel"
                    class="Cancel_Btn"
                  
                    press="onBrokerSelectEditDialogClosePress"
                />
                <ToolbarSpacer />
                <Button
                    class="btnSave"
                    type="Emphasized"
                    text="Save"
                    press="onBrokerSelectEditDialogClosePress"
                />
            </OverflowToolbar>
        </footer>

        <content>
            <f:SimpleForm
                editable="true"
                class="customSimpleFormShadow"
                width="auto"
                layout="ColumnLayout"
                columnsM="2"
                columnsL="2"
                columnsXL="2"
            >
                <f:content>
                    <Toolbar ariaLabelledBy="idShipFrom">
                        <Button
                            icon="sap-icon://customer-briefing"
                            press="handleAddLocPress"
                        />
                        <Title
                            id="idAddBrokerSelect123"
                            text="Name and Contact"
                        />
                    </Toolbar>
                    <Label text="Contact Name" />
                    <Input
                        class="sapUiSmallMarginBottom create-ship-req_input"
                    />
                    <Label text="Address Line 1" />
                    <Input
                        class="sapUiSmallMarginBottom create-ship-req_input"
                    />
                    <Label text="Address Line 3" />
                    <Input
                        class="sapUiSmallMarginBottom create-ship-req_input"
                    />
                    <Label text="City" />
                    <Input
                        class="sapUiSmallMarginBottom create-ship-req_input"
                    />
                     <Label text="Country" />
                    <Input
                        class="sapUiSmallMarginBottom create-ship-req_input"
                    />
                    <Label text="Email" />
                    <Input
                        class="sapUiSmallMarginBottom create-ship-req_input"
                    />
                     <Label text="Company Name" />
                    <Input
                        class="sapUiSmallMarginBottom create-ship-req_input"
                    />
                    <Label text="Address Line 2" />
                    <Input
                        class="sapUiSmallMarginBottom create-ship-req_input"
                    />
                    <Label text="State" />
                    <Input
                        class="sapUiSmallMarginBottom create-ship-req_input"
                    />
                    <Label text="Postal Code" />
                    <Input
                        class="sapUiSmallMarginBottom create-ship-req_input"
                    />
                    <Label text="Phone No" />
                    <Input
                        class="sapUiSmallMarginBottom create-ship-req_input"
                    />
                    <Label text="Fax No" />
                    <Input
                        class="sapUiSmallMarginBottom create-ship-req_input"
                    />
                </f:content>
            </f:SimpleForm>

            <f:SimpleForm
                editable="true"
                class="customSimpleFormShadow"
                width="auto"
                layout="ColumnLayout"
                columnsM="2"
                columnsL="2"
                columnsXL="2"
            >
                <f:content>
                    <Toolbar ariaLabelledBy="idShipFrom">
                        <Button
                            icon="sap-icon://customer-briefing"
                            press="handleAddLocPress"
                        />
                        <Title
                            id="idAddLocaTionFrom1123"
                            text="Additional Information"
                        />
                    </Toolbar>
                    
                    <Label text="Tin Number" />
                    <Input
                        class="sapUiSmallMarginBottom create-ship-req_input"
                    />
                    <Label text="Page No" />
                    <Input
                        class="sapUiSmallMarginBottom create-ship-req_input"
                    />
                    <Label text="Clearence Brokerage" />
                    <Input
                        class="sapUiSmallMarginBottom create-ship-req_input"
                    />
                    <Label text="Account No" />
                    <Input
                        class="sapUiSmallMarginBottom create-ship-req_input"
                    />
                    <Label text="Broker Type" />
                    <Input
                        class="sapUiSmallMarginBottom create-ship-req_input"
                    />
                    <Label text="Tin Type" />
                    <Input
                        class="sapUiSmallMarginBottom create-ship-req_input"
                    />
                </f:content>
            </f:SimpleForm>
        </content>
    </Popover>
</core:FragmentDefinition>
