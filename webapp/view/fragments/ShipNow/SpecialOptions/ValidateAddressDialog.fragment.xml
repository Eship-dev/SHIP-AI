<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:layout="sap.ui.layout">
    <Dialog
        id="addressVerificationDialog"
        title=""
        draggable="true"
        contentWidth="auto"
        contentHeight="auto"
        class="sapUiResponsivePadding--header sapUiResponsivePadding--content">
<customHeader>
        <Toolbar>
            <Title text="ADDRESS VERIFICATION" class="sapUiSmallMarginBegin ADDRESSColorBold"/>
            <ToolbarSpacer />
            <Button 
                icon="sap-icon://decline"
                 class="Decline_Btn ship-now-decline_btn"  
                press="onCloseValidateAddressDialog" />
        </Toolbar>
    </customHeader>
        <VBox>
            <Text text="Please verify your address to ensure a timely delivery." class="sapUiSmallMarginBottom sapUiSmallMarginBegin sapUiSmallMarginTop" />

            <HBox justifyContent="SpaceBetween" >
                <!-- Use As Entered -->
                <VBox class="sapUiSmallMargin verifiedAddressBox  shipnowAddressValidate greenBox"  width="250px" >
                    <HBox alignItems="Center">
                        <CheckBox id="checkBoxUseEntered" text="Use As Entered" />
                    </HBox>
                    <Text text="{ShipNowDataModel>/ShipToAddress/BusinessPartnerName1}" />
                    <Text text="{ShipNowDataModel>/ShipToAddress/StreetName}" />
                    <Text text="{ShipNowDataModel>/ShipToAddress/CityName}" class="sapUiSmallMarginTop" />
                </VBox>

                <!-- Verified Address -->
                <VBox class="sapUiSmallMargin  verifiedAddressBox shipnowAddressValidate greenBox" width="250px">
                    <HBox alignItems="Center">
                         <CheckBox id="checkBoxUseEnteredsd" text="Verified Address" />
                    </HBox>
                    <Text text="{ShipNowDataModel>/ShipToAddress/BusinessPartnerName1}" />
                    <Text text="{ShipNowDataModel>/ShipToAddress/StreetName}" />
                    <Text text="{ShipNowDataModel>/ShipToAddress/CityName}" class="sapUiSmallMarginTop" />
                </VBox>
            </HBox>
        </VBox>

         <footer>
            <OverflowToolbar class="sapMPopoverFooter1">
                <Button text="Cancel" press="onCloseValidateAddressDialog" />
                <ToolbarSpacer />
                <Button text="Update Address" type="Emphasized" press="onCloseValidateAddressDialog" />
            </OverflowToolbar>
        </footer>

        
    </Dialog>
</core:FragmentDefinition>
