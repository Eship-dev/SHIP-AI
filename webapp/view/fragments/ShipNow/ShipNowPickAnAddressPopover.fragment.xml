<core:FragmentDefinition 
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    height="100%"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form">

    <Popover id="idShipNowPickAnAddressPopover"  
             placement="Right" 
             contentWidth="60%"
             showHeader="true"
             class="sapUiResponsivePadding--header sapUiResponsivePadding--footer">
        
        <!-- Custom Header -->
        <customHeader>
            <Toolbar>
                <Title text="Pick An Address" />
                <ToolbarSpacer />
                <Button 
                    icon="sap-icon://decline" 
                    class="Decline_Btn"
                    press="onShipNowPickAnAddressCancelPress" />
            </Toolbar>
        </customHeader>

        <content>
            <Table id="idShipNowPickAnAddressTable"
                   class="sapUiTinyMarginTop"
                   growing="true"
                   growingThreshold="12"
                   mode="SingleSelectMaster"
                   items="{/addresses}">
                <columns>
                    <Column>
                        <header>
                            <Label text="Contact Name" />
                        </header>
                    </Column>
                    <Column>
                        <header>
                            <Label text="Company Name" />
                        </header>
                    </Column>
                    <Column>
                        <header>
                            <Label text="Address Line 1" />
                        </header>
                    </Column>
                    <Column>
                        <header>
                            <Label text="Address Line 2" />
                        </header>
                    </Column>
                    <Column>
                        <header>
                            <Label text="Address Line 3" />
                        </header>
                    </Column>
                    <Column>
                        <header>
                            <Label text="City" />
                        </header>
                    </Column>
                    <Column>
                        <header>
                            <Label text="State" />
                        </header>
                    </Column>
                    <Column>
                        <header>
                            <Label text="Zipcode" />
                        </header>
                    </Column>
                    <Column>
                        <header>
                            <Label text="Country" />
                        </header>
                    </Column>
                    <Column>
                        <header>
                            <Label text="Phone" />
                        </header>
                    </Column>
                    <Column>
                        <header>
                            <Label text="Email" />
                        </header>
                    </Column>
                    <Column>
                        <header>
                            <Label text="Address Type" />
                        </header>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <Text text="{contactName}" />
                            <Text text="{companyName}" />
                            <Text text="{addressLine1}" />
                            <Text text="{addressLine2}" />
                            <Text text="{addressLine3}" />
                            <Text text="{city}" />
                            <Text text="{state}" />
                            <Text text="{zipcode}" />
                            <Text text="{country}" />
                            <Text text="{phone}" />
                            <Text text="{email}" />
                            <Text text="{addressType}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
            <Toolbar>
                <ToolbarSpacer />
                <Button text="First" enabled="false" />
                <Button text="Previous" enabled="false" />
                <Text text="1-50 of 74" />
                <Button text="Next" />
                <Button text="Last" />
            </Toolbar>
        </content>

		<footer>
            <OverflowToolbar>
                <Button
                    text="Cancel"
                    press="onShipNowPickAnAddressCancelPress"
                />
                <ToolbarSpacer />
                <Button
                    type="Emphasized"
                    text="Submit"
                    press="onShipNowPickAnAddressSelectPress"
                />
            </OverflowToolbar>
        </footer>
    </Popover>
</core:FragmentDefinition>
