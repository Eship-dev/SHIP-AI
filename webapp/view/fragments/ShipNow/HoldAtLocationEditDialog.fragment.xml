<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core">
    <Dialog
        id="idHoldAtLocationEditDialog"
        contentWidth="40%"
        contentHeight="80%" >
     <customHeader>
    <Toolbar>
        <Title text="Hold Location Information" />
            <ToolbarSpacer />
                <Button 
                    icon="sap-icon://decline" 
                    press="onHoldAtLocationEditDialogClosePress" 
                    type="Transparent" />
    </Toolbar>
    </customHeader>
        <f:SimpleForm 
            class="customSimpleFormShadow"
            width="auto"
			editable="true"
			layout="ResponsiveGridLayout"
			labelSpanXL="4"
			labelSpanL="4"
			labelSpanM="12"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="0"
			emptySpanL="0"
			emptySpanM="0"
			emptySpanS="0"
			columnsXL="2"
			columnsL="2"
			columnsM="1"
			singleContainerFullSize="false" >
			<f:content>
				<core:Title text="Contact Info" icon="sap-icon://customer-briefing" />
				<Label text="Contact Name" />
				<Input value="{}" width="50%"/>
			</f:content>
		</f:SimpleForm>
    </Dialog>
</core:FragmentDefinition>
