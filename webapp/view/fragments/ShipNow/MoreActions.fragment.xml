<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Popover 
        id="idMoreActionsPopover"
        showHeader="false" 
        contentWidth="auto" 
        showArrow="true"
        class="sapUiResponsivePadding--header sapUiResponsivePadding--footer sapUiSmallMarginBottom"
        placement="Top" 
        contentHeight="auto" >
		<content>
        <List
            id="moreActionsList"
            items="{/moreActionsList}"
            mode="SingleSelectMaster"
            includeItemInSelection="true"
            itemPress="onMoreActionItemPress" >
            <StandardListItem
                title="{moreActionItem}"
                type="Active" />
        </List>
        </content>
    </Popover>
</core:FragmentDefinition>
