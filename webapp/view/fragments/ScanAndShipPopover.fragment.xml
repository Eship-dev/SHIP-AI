<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<Popover
		contentWidth="50%"
		showHeader="false"
		id="idScanAndShipPopover"
		class="sapUiResponsivePadding--header sapUiResponsivePadding--footer"
		placement="Bottom"
		initialFocus="email">
		<Toolbar >
			<ToolbarSpacer ></ToolbarSpacer>
				<Button icon="sap-icon://decline" press="handleScanAndShipClosePress" ></Button>
		</Toolbar>
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button
					text="Reset"
					type="Ghost"
					press="handleScanAndShipPopoverResetPress" />
                <Button
					text="Apply"
					type="Success"
					press="handleScanAndShipPopoverApplyPress" />
			</OverflowToolbar>
		</footer>
		<HBox >
			<VBox class="sapUiSmallMargin" >
			<Label text="Location Name" width="auto" />
					<ComboBox
						width="auto"
						items="{}">
						<core:Item key="{key}" text="{text}" />
					</ComboBox>
			</VBox>
			<VBox class="sapUiSmallMargin" >
					<Label text="Carrier" width="auto" />
					<ComboBox
						width="auto"
						items="{}">
						<core:Item key="{key}" text="{text}" />
					</ComboBox>
			</VBox>
			<VBox class="sapUiSmallMargin" >
					<Label text="Status" width="auto" />
					<ComboBox
						width="auto"
						items="{}">
						<core:Item key="{key}" text="{text}" />
					</ComboBox>
			</VBox>
			<VBox class="sapUiSmallMargin" >
					<Label text="Search" width="auto" />
					<Input value="{}" width="auto"></Input>
			</VBox>
		</HBox>
	</Popover>
</core:FragmentDefinition>
