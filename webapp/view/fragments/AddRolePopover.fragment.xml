<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    height="100%"
>
    <Popover
        id="idAddRolePopover"
        placement="Bottom"
        contentWidth="45%"
        contentHeight="75%"
        showHeader="true"
        class="sapUiResponsivePadding sapUiResponsivePadding "
    >
        <!-- Custom Header -->
        <customHeader>
            <Toolbar>
                <!-- Title -->
                <Title text="Create Role" />
                <!-- Spacer to push close button to the right -->
                <ToolbarSpacer />
                <!-- Close Button -->
                <Button
                    icon="sap-icon://decline"
                    press="AddRoleClosePress"
                    type="Transparent"
                />
            </Toolbar>
        </customHeader>
        <footer>
            <OverflowToolbar>
                <Button
                    text="Cancel"
                    press="AddRoleCancelPopover"
                />
                <ToolbarSpacer />
                <Button
                    type="Emphasized"
                    text="Save"
                    press="AddRoleSelectPopover"
                />
            </OverflowToolbar>
        </footer>
        <content>
           	<f:SimpleForm editable="true"
                            class="customSimpleFormShadow"
                            width="auto"
							  layout="ColumnLayout"
							  columnsM="2"
							  columnsL="2"
							  columnsXL="2">
					<f:content>
						 
                         <Label text="Role ID" />
                        <Input ></Input>
                          <Label text="Status" />
                        <Switch state="true" >
				            <layoutData>
					            <FlexItemData growFactor="1" />
				            </layoutData>
			            </Switch>
                        <Label text="Role Name" />  
			             <Input ></Input>
					</f:content>
				</f:SimpleForm>
        </content>
    </Popover>
</core:FragmentDefinition>
