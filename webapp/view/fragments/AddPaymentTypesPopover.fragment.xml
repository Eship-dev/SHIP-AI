<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.ui.layout.form"
    height="100%"
>
    <Popover
        id="idAddPaymentTypesPopover"
        placement="Left"
        contentWidth="45%"
        contentHeight="80%"
        showHeader="true"
        class="sapUiResponsivePadding sapUiResponsivePadding "
    >
        <!-- Custom Header -->
        <customHeader>
            <Toolbar>
                <!-- Title -->
                <Title text="Add Countries" />

                <!-- Spacer to push close button to the right -->
                <ToolbarSpacer />

                <!-- Close Button -->
                <Button
                    icon="sap-icon://decline"
                    press="AddPaymentTypesClosePress"
                    type="Transparent"
                />
            </Toolbar>
        </customHeader>
        <footer>
            <OverflowToolbar>
                <Button
                    text="Cancel"
                    press="AddPaymentTypesCancelPopover"
                />
                <ToolbarSpacer />
                <Button
                    type="Emphasized"
                    text="Save"
                    press="AddPaymentTypesSelectPopover"
                />
            </OverflowToolbar>
        </footer>

        <content>
           	<f:SimpleForm editable="true"
                            class="customSimpleFormShadow"
                            width="auto"
							  layout="ColumnLayout"
							  columnsM="2"
							  columnsL="2"
							  columnsXL="2">
					<f:content>
                    <Toolbar ariaLabelledBy="idShipFrom">
                            <Button icon="sap-icon://customer-briefing" press="handleAddLocPress"/>
								<Title id="idAddPaymentTypesFrom3" text="ERP"/>
						</Toolbar>
						
                         <Label text="Payment Type" />
                         <ComboBox  placeholder="Select">
                         </ComboBox>
                          <Label text="Description" />  
			             <Input ></Input>
                         <Label text="Payment Code" />
                        <Input /> 
                          <Label text="Status" />
                        <Switch state="true" >
				            <layoutData>
					            <FlexItemData growFactor="1" />
				            </layoutData>
			            </Switch>
                        
                        
                       
					</f:content>
				</f:SimpleForm>
        </content>
    </Popover>
</core:FragmentDefinition>
